<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GreenChatMobileMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GreenChatMobileMaui"
    Title="GreenChatMobileMaui">

    <TabBar>
        <ShellContent Title="Main" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Login" ContentTemplate="{DataTemplate local:LoginPage}" />
        <ShellContent Title="Register" ContentTemplate="{DataTemplate local:RegisterPage}" />
        <ShellContent Title="Chat" ContentTemplate="{DataTemplate local:ChatPage}" />
        <ShellContent Title="Discussions" Route="Discussions" ContentTemplate="{DataTemplate local:DiscussionsPage}" />
    </TabBar>

</Shell>
